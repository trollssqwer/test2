<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Register">

    <ImageView
        android:id="@+id/register_app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"

        android:background="@drawable/logo2" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/input_desgin"
        android:hint="Ten dang nhap"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="17sp"

        />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_username"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_desgin"
        android:hint="Mat khau"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="17sp"

        />

    <EditText
        android:id="@+id/register_numberphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_desgin"
        android:hint="So dien thoai"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="17sp" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/buttons"
        android:inputType="text"
        android:padding="20dp"
        android:text="Create Account"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>